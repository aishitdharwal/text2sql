# Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=text2sql-cluster.cluster-cmey4eonndgc.ap-south-1.rds.amazonaws.com
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=YourSecurePassword123

# Anthropic API Configuration
ANTHROPIC_API_KEY=sk-ant-...

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8080

# CloudWatch Logging Configuration (Optional)
# Leave AWS credentials empty to use IAM role (recommended for EC2/ECS)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
CLOUDWATCH_LOG_GROUP=/aws/text2sql/backend
ENABLE_CONSOLE_LOGGING=true
LOG_LEVEL=INFO

# Query Caching Configuration (Optional)
ENABLE_CACHE=true
CACHE_TABLE_NAME=text2sql_query_cache
CACHE_TTL_DAYS=30

# LangFuse Observability (Optional)
# Sign up at https://cloud.langfuse.com or self-host
ENABLE_LANGFUSE=true
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_HOST=https://cloud.langfuse.com
